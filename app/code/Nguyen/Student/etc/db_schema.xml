<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="nguyen_student" resource="default" engine="innodb" comment="Student Table">
        <column name="student_id" xsi:type="int" nullable="false" identity="true" unsigned="true" comment="Student ID"/>
        <column name="name" xsi:type="varchar" length="255" nullable="false" comment="Student Name"/>
        <column name="email" xsi:type="varchar" length="255" nullable="true" comment="Email"/>
        <column name="created_at" xsi:type="timestamp" 
                default="CURRENT_TIMESTAMP" nullable="false" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="student_id"/>
        </constraint>
    </table>

</schema>
